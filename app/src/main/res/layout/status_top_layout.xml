<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px60"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/missionDisconnected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px60"
        android:background="@mipmap/top_bg_discon"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/missionConnected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px60"
        android:background="@mipmap/top_bg_discon">

        <kr.go.forest.das.UI.CustomPreFlightStatusWidget
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:background="@mipmap/connected_status"
            />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:layout_marginRight="@dimen/px516"
            android:layout_marginTop="@dimen/px6"
            android:orientation="horizontal">
            <dji.ux.widget.FlightModeWidget
                android:layout_width="118.45dp"
                android:layout_height="@dimen/dji50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:layout_marginRight="@dimen/px520"
            android:orientation="horizontal">
            <dji.ux.widget.GPSSignalWidget
                android:layout_width="@dimen/dji100"
                android:layout_height="@dimen/dji50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:layout_marginRight="@dimen/px440"
            android:orientation="horizontal">
            <dji.ux.widget.RemoteControlSignalWidget
                android:layout_width="@dimen/dji86"
                android:layout_height="@dimen/dji50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:layout_marginRight="@dimen/px344"
            android:orientation="horizontal">
            <dji.ux.widget.VideoSignalWidget
                android:layout_width="@dimen/dji86"
                android:layout_height="@dimen/dji50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px220"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:layout_marginTop="@dimen/px6"
            android:orientation="horizontal">
            <dji.ux.widget.BatteryWidget
                android:layout_width="@dimen/px112"
                android:layout_height="@dimen/px44"
                custom:excludeView="singleVoltage"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/px2"
            android:layout_height="@dimen/px60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px90"
            android:background="@mipmap/top_line"/>

        <Button
            android:id="@+id/btn_mission_upload"
            android:layout_width="@dimen/px34"
            android:layout_height="@dimen/px34"
            android:layout_marginRight="@dimen/px26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_upload_selector"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_mission_back"
        android:layout_width="@dimen/px34"
        android:layout_height="@dimen/px34"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px26"
        android:background="@drawable/btn_pre_selector"
        />
</RelativeLayout>