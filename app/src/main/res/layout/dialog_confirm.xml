<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_confirm"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.5"></RelativeLayout>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/dialog_confirm_bg"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_width="@dimen/px590"
        android:layout_height="@dimen/px400">

        <ImageView
            android:id="@+id/dialog_confirm_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/px110"
            android:layout_height="@dimen/px110"
            android:layout_marginTop="@dimen/px50"
            android:background="@mipmap/ico_connect"/>
        <TextView
            android:id="@+id/dialog_confirm_text"
            android:layout_below="@id/dialog_confirm_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="32px"
            android:textColor="#000"
            android:text="드론과 연결이 끊어졌습니다." />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_dialog_confirm_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="확인"
                android:textSize="34px"
                android:textAlignment="center"
                android:background="#555"
                android:textColor="#FFF"
                />
            <Button
                android:id="@+id/btn_dialog_confirm_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="취소"
                android:textSize="34px"
                android:textAlignment="center"
                android:background="#555"
                android:textColor="#FFF"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
