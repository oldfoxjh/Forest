<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"/>

    <LinearLayout
        android:layout_width="@dimen/px660"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px370"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/loginIDEditText"
                android:padding="@dimen/px30"
                android:layout_width="@dimen/px410"
                android:layout_height="@dimen/px90"
                android:background="@android:color/white"/>

            <EditText
                android:id="@+id/loginPWEditText"
                android:layout_marginTop="@dimen/px40"
                android:padding="@dimen/px30"
                android:layout_width="@dimen/px410"
                android:layout_height="@dimen/px90"
                android:background="@android:color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/loginProcessButton"
            android:layout_marginLeft="@dimen/px40"
            android:layout_width="@dimen/px210"
            android:layout_height="@dimen/px220"
            android:background="@drawable/login_selector"
            android:onClick="processLogin"
            />

    </LinearLayout>

</RelativeLayout>