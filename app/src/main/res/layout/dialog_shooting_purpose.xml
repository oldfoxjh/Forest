<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_confirm"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.5"></RelativeLayout>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/dialog_confirm_bg"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_width="@dimen/px590"
        android:layout_height="@dimen/px382">

        <TextView
            android:id="@+id/textview_dialog_purpose_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/font42"
            android:textFontWeight=""
            android:textColor="#000"
            android:text="촬영목적"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/px46"
            android:layout_below="@+id/textview_dialog_purpose_title">
            <Spinner
                android:id="@+id/spinner_purpose"
                android:background="@drawable/spinner_background"
                android:layout_width="@dimen/px400"
                android:layout_height="@dimen/px70"
                android:layout_marginLeft="@dimen/px96"
                android:paddingLeft="@dimen/px20"
                android:paddingRight="@dimen/px20"
                android:gravity="center"
                android:textSize="@dimen/font42"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px104"
                android:layout_marginTop="@dimen/px32"
                android:src="@mipmap/input_arrow" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_dialog_purpose_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="확인"
                android:textSize="@dimen/font34"
                android:textAlignment="center"
                android:background="#555"
                android:textColor="#FFF"
                />
            <Button
                android:id="@+id/btn_dialog_purpose_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="취소"
                android:textSize="@dimen/font34"
                android:textAlignment="center"
                android:background="#555"
                android:textColor="#FFF"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
